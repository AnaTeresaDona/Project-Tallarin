<h1>Home#index</h1>

<div class="container my-4">
    <div class="row">
    
    <% @tweets.each do |tweet| %>

        <div class="col-12 col-sm-12 col-md-6 col-lg-4 my-5">
            <div class="card mx-5">
                <%= image_tag (tweet.user.photo_url), class:"avatar-in-tweet card-img-top" %>
                <%= tweet.content %>
            <hr/>
                <div class="text-center">
                <%= tweet.likes.count %> likes | 0 re-tweets
                </div>
            </div>
        </div>
            <%end%>

    </div>
</div>

<div class="mt-2">
<%= paginate @tweets%>
</div>

